generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-1.1.x","linux-musl-openssl-3.0.x","linux-musl-arm64-openssl-3.0.x"]
  //output = "./"
}

datasource db {
  // provider = "postgresql"
  // url      = env("DATABASE_URL")
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// This is an event instance
model Race {
  id             Int           @id @default(autoincrement())
  eventId        Int
  event          Event         @relation(fields: [eventId], references: [id])
  // date           DateTime
  // eventStartTime DateTime
  rankings       Ranking[]
  records        Record[]
  // raceStartTime  DateTime
  competitions   Competition[] @relation("CompetitionRaces")
  completed      Boolean       @default(false)
}

model Event {
  id        Int    @id @default(autoincrement())
  eventType String
  eventName String
  Race      Race[]
}

model Competition {
  id              Int      @id @default(autoincrement())
  competitionDate DateTime
  competitionName String
  teams           Team[]   @relation("CompetitionTeams")
  races           Race[]   @relation("CompetitionRaces")
  records         Record[]
}

model Ranking {
  id     Int  @id @default(autoincrement())
  rank   Int
  teamId Int
  team   Team @relation(fields: [teamId], references: [id])
  raceId Int
  race   Race @relation(fields: [raceId], references: [id])
  score  Int
  finishStatus String?
}

model Team {
  id           Int           @id @default(autoincrement())
  teamName     String
  vehicleType  String
  vehicleClass String
  devices      Device[]
  rankings     Ranking[]
  competitions Competition[] @relation("CompetitionTeams")
}

model Device {
  id         Int           @id @default(autoincrement())
  serialNo   String        @unique
  teamId     Int?
  team       Team?          @relation(fields: [teamId], references: [id])
  config     DeviceConfig?
  records    Record[]
  sensorData SensorData[]

  @@index([teamId])
}

model DeviceConfig {
  id         Int      @id @default(autoincrement())
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  configName String?
  settings   Json
  deviceId   Int      @unique
  device     Device   @relation(fields: [deviceId], references: [id])
}

model Record {
  id            Int          @id @default(autoincrement())
  avgCurrent    Float?
  avgVoltage    Float?
  energy        Float?
  raceId        Int?
  race          Race?         @relation(fields: [raceId], references: [id])
  deviceId      Int
  device        Device       @relation(fields: [deviceId], references: [id])
  competitionId Int?
  competition   Competition?  @relation(fields: [competitionId], references: [id])
  sensorData    SensorData[]
  stopTime      DateTime?
}

model SensorData {
  id             Int     @id @default(autoincrement())
  timestamp      Decimal
  recordId       Int
  record         Record  @relation(fields: [recordId], references: [id])
  deviceId       Int
  device         Device  @relation(fields: [deviceId], references: [id])
  sessionId      Int
  measurementId  Int
  avgPower       Float?
  avgVoltage     Float?
  avgCurrent     Float?
  peakPower      Float?
  peakVoltage    Float?
  peakCurrent    Float?
  energy         Float?
}

model Notification {
  id        Int      @id @default(autoincrement())
  message   String
  data      Json?
  createdAt DateTime @default(now())
  read      Boolean  @default(false)
}
